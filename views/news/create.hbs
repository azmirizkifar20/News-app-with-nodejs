{{! create news page }}
<div class="alert alert-light" style="margin-bottom: 0px">
    <h1 class="text-center">{{ headline }}</h1>
</div>

<form action="/posting" method="post">
    <div class="row" style="margin: 0;">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" name="title" placeholder="Masukkan judul" required>
            </div>
            <div class="form-group">
                <label>Text</label>
                <textarea class="form-control" name="text" placeholder="Masukkan teks" required></textarea>
            </div>
            <button type="submit" name="submit" class="btn btn-primary">Submit</button>
            <a href="/" class="btn btn-secondary">Kembali</a>
        </div>
        <div class="col-lg-2"></div>
    </div>
</form>